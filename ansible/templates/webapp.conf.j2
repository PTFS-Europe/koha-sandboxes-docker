<VirtualHost *:80>
    ServerName {{ sandbox_host_domain }}

    ProxyPass        / http://localhost:3000/ retry=0
    ProxyPassReverse / http://localhost:3000/ retry=0

    {% if USE_HTPASSWD %}
    <Proxy *>
        Order deny,allow
        Allow from all
        Authtype Basic
        Authname "Password Required"
        AuthUserFile /etc/apache2/.htpasswd
        Require valid-user
    </Proxy>
    {% endif %}
</VirtualHost>
